# Tắt hiển thị danh sách thư mục
Options -Indexes

# Chuyển hướng tất cả request đến public/
RewriteEngine On
RewriteCond %{REQUEST_URI} !^/Mini-4/public/
RewriteRule ^(.*)$ /Mini-4/public/$1 [L,R=301]

# Bảo mật - ẩn các file nhạy cảm
<Files "*.sql">
    Require all denied
</Files>

<Files "*.log">
    Require all denied
</Files>

<Files "config/*">
    Require all denied
</Files>